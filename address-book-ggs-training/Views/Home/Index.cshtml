@{
    ViewBag.Title = "Address Book";
}

<div class="row">
    <div class="col-md-3">
        Lista
    </div>

    <div class="col-md-9">
        <h2>Contact details</h2>

        @Html.Label("Name")
        <br />
        @Html.TextBox("name")
        <br />
        @Html.Label("Surname")
        <br />
        @Html.TextBox("surname")
        <br />
        @Html.Label("address", "Address")
        <br />
        @Html.TextBox("address")
        <br />
        @Html.Label("avatar", "Avatar")
        <br />
        <button>Upload image</button>
        <br />
        @Html.Label("website", "WebSite")
        <br />
        @Html.TextBox("webSite")
        <br />
        @Html.Label("birthDay", "BirthDay")
        <br />
        <input type="date" name="birth" value="">
        <br />
        @Html.CheckBox("shared")
        @Html.Label("shared", "Shared contact")
        <br />
        <button>Save</button>
    </div>
</div>  